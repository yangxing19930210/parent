/* 前后端通信相关的配置,注释只允许使用多行方式 */
{
    /* 上传图片配置项 */
    "imageActionName": "uploadimage", /* 执行上传图片的action名称 */
    "imageFieldName": "upfile", /* 提交的图片表单名称 */
    "imageMaxSize": 2048000, /* 上传大小限制，单位B */
    "imageAllowFiles": [".png", ".jpg", ".jpeg", ".gif", ".bmp"], /* 上传图片格式显示 */
    "isWatermark": false, /*是否添加水印,true为添加 -v1.1.5*/
    "watermarkImgPath": "/opt/fileStore/spms/smpcb/watermark.png", /*水印图片路径 -v1.1.5*/
    "watermarkRate": 1.0, /*水印占整张图片的比率 -v1.1.5*/
    "imageCompressEnable": true, /* 是否压缩图片,默认是true */
    "imageCompressBorder": 1600, /* 图片压缩最长边限制 */
    "imageCompressLength": 150, /* 超过多大图片生成PC压缩图，单位KB -v1.1.2*/
    "imageCompressH5Length": 80, /* 超过多大图片生成H5压缩图，单位KB -v1.1.2*/
    "h5Compress" : "true",	/*是否生成H5压缩图片 -v1.1.2*/
    "PCCompress" : "true", /*是否生成PC压缩图片 -v1.1.2*/
    "h5Quality" : "50.0", /*生成h5图片压缩比，100.0为不压缩，0.0最小 -v1.1.3*/
    "PCQuality" : "50.0", /*生成PC图片压缩比，100.0为不压缩，0.0最小 -v1.1.3*/
    "imageInsertAlign": "none", /* 插入的图片浮动方式 */
    "imageUrlPrefix": "/fileStore/spms/smpcb/editor", /* 图片访问路径前缀 */
    "imagePathFormat": "/opt/fileStore/spms/smpcb/editor/{yyyy}{mm}{dd}/{time}{rand:6}", /* 上传保存路径,可以自定义保存路径和文件名格式 */
                                /* {filename} 会替换成原文件名,配置这项需要注意中文乱码问题 */
                                /* {rand:6} 会替换成随机数,后面的数字是随机数的位数 */
                                /* {time} 会替换成时间戳 */
                                /* {yyyy} 会替换成四位年份 */
                                /* {yy} 会替换成两位年份 */
                                /* {mm} 会替换成两位月份 */
                                /* {dd} 会替换成两位日期 */
                                /* {hh} 会替换成两位小时 */
                                /* {ii} 会替换成两位分钟 */
                                /* {ss} 会替换成两位秒 */
                                /* 非法字符 \ : * ? " < > | */
                                /* 具请体看线上文档: fex.baidu.com/ueditor/#use-format_upload_filename */


    /* 截图工具上传 */
    "snapscreenActionName": "uploadimage", /* 执行上传截图的action名称 */
    "snapscreenPathFormat": "/opt/fileStore/spms/smpcb/editor/{yyyy}{mm}{dd}/{time}{rand:6}", /* 上传保存路径,可以自定义保存路径和文件名格式 */
    "snapscreenUrlPrefix": "/fileStore/spms/smpcb/editor", /* 图片访问路径前缀 */
    "snapscreenInsertAlign": "none" ,/* 插入的图片浮动方式 */

    /* 上传文件配置 */
    "fileActionName" :"uploadfile", /* controller里,执行上传视频的action名称 */
    "fileFieldName":"upfile", /* 提交的文件表单名称 */
    "filePathFormat": "/opt/fileStore/spms/smpcb/editor/{yyyy}{mm}{dd}/{time}{rand:6}", /* 上传保存路径,可以自定义保存路径和文件名格式，上传路径配置 */
    "fileUrlPrefix": "" , /* 文件访问路径前缀 */
    "fileMaxSize": 204800000 , /* 上传大小限制,单位B，此处配置200M， */
    "fileAllowFiles": [".doc", ".docx", ".xls", ".xlsx", ".ppt", ".pptx",".wps", ".pdf",".rar"] /* 上传文件格式显示 */

}